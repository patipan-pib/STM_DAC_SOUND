/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
#define AUDIO_DATA_SIZE 1024
uint16_t audio_data[] = {
    0x007F, 0x0080, 0x0081, 0x0082, 0x0083, 0x0084, 0x0085, 0x0086,
    0x0087, 0x0088, 0x0089, 0x008A, 0x008B, 0x008C, 0x008D, 0x008E,
    // เพิ่มข้อมูลที่แปลงจากไฟล์ WAV
}
#define BUFFER_SIZE 128
uint16_t buffer[BUFFER_SIZE];
void PlayAudio(void) {
    // Open the file
	uint32_t index = 0;

	    while (index < AUDIO_DATA_SIZE) {
	        // คัดลอกข้อมูลจากอาร์เรย์ไปยังบัฟเฟอร์
	        uint32_t bytesToCopy = (AUDIO_DATA_SIZE - index < BUFFER_SIZE) ? (AUDIO_DATA_SIZE - index) : BUFFER_SIZE;
	        for (uint32_t i = 0; i < bytesToCopy; i++) {
	            buffer[i] = audio_data[index + i]; // คัดลอกข้อมูลเสียง
	        }
	        index += bytesToCopy;

	        // ส่งข้อมูลไปที่ DAC
	        for (uint32_t i = 0; i < bytesToCopy; i++) {
	            HAL_DAC_SetValue(&hdac, DAC_CHANNEL_1, DAC_ALIGN_8B_R, buffer[i]);
	        }

	        // เพิ่มความหน่วงเวลา (ขึ้นอยู่กับ sample rate และ buffer size)
	        HAL_Delay(10);  // Delay เพื่อควบคุมการเล่นเพลง
	    }
}
/* USER CODE END 0 */

